<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:padding="16dp">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/btnStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartPeriodic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_periodic_work"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Button
        android:id="@+id/btnPublishNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/publish_notification"
        android:layout_marginTop="70dp"
        android:visibility="visible"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchNotificationsEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Notifications"
        app:switchPadding="100dp"/>

</LinearLayout>
